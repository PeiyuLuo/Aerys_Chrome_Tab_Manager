{
    "manifest_version": 2,
    "name":"Aerys - Tab Manager",
    "version": "1.1",
    "description": "Open too many tabs in your browser? Don't worry, let Aerys II Targaryen, also knownd as the Mad King, help you burn them all!",
    "permissions":[
        "tabs",
        "<all_urls>"
    ],

    "browser_action":{
        "default_title":"Aerys - Your Tab Guard",
        "default_popup":"popup.html",
        "default_icon": { "32": "images/icon32.png" }
    },
    "icons": {"128": "images/icon128.png",
                         "48": "images/icon48.png",
                         "32": "images/icon32.png",
                         "16": "images/icon16.png" },

    "background":{
        "scripts":["background.js"],
        "persistent":false
    }

}